<!-- views/dashboard.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
</head>
<body>
  <h2>All Posts</h2>

  <% posts.forEach(post => { %>
    <div style="margin-bottom: 30px;">
      <img src="<%= post.image %>" alt="image" style="max-width: 300px;" /><br />
      <strong><%= post.user.username %></strong><br />
      <p><%= post.caption %></p>
    </div>
  <% }) %>

  <a href="/post/upload">Upload Another Post</a> |
  <a href="/logout">Logout</a>
</body>
</html>
